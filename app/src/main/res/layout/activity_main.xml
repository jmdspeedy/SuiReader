<?xml version="1.0" encoding="utf-8"?>
<!--
  Designed for clarity and maintainability.
  - Uses Material 3 components and theme attributes for a modern, consistent look.
  - Employs standardized typography and spacing for better visual hierarchy.
  - Uses tools attributes for better previewing in Android Studio.
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Suica Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/suica_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Initial State: Prompt to scan -->
                    <LinearLayout
                            android:id="@+id/initial_scan_view"
                            android:layout_width="match_parent"
                            android:layout_height="282dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="32dp"
                            android:visibility="visible"
                            tools:ignore="UseCompoundDrawables">

                        <ImageView
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:contentDescription="@string/hold_your_ic_card_to_the_reader"
                                android:src="@drawable/ic_nfc"
                                app:tint="?attr/colorOnPrimary" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:text="@string/hold_your_ic_card_to_the_reader"
                                android:textAlignment="center"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnPrimary"
                                android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Data State: Shows Suica Info -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/suica_data_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/suica_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/suica"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceDisplayMedium"
                            android:textColor="?attr/colorOnPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/suica_label"
                            tools:text="Â¥3,240" />

                        <!-- This space adds extra height to the card -->
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/balance_text"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/penguin_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/penguin"
                            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
                            android:background="?attr/colorPrimaryVariant"
                            android:elevation="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:contentDescription="@string/suica" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- History List -->
            <TextView
                android:id="@+id/history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MainActivity">
                <!-- History items will be added here dynamically -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
