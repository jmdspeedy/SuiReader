<?xml version="1.0" encoding="utf-8"?>
<!--
  Designed for clarity and maintainability.
  - Uses Material 3 components and theme attributes for a modern, consistent look.
  - Employs standardized typography and spacing for better visual hierarchy.
  - Uses tools attributes for better previewing in Android Studio.
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030c2d"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/background"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Suica Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/suica_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1C2A3A"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:clipChildren="true"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Initial State: Prompt to scan -->
                    <LinearLayout
                            android:id="@+id/initial_scan_view"
                            android:layout_width="match_parent"
                            android:layout_height="282dp"
                            android:background="@drawable/bg_premium_scan_view"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="0dp"
                            android:visibility="visible"
                            tools:ignore="UseCompoundDrawables">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                    android:id="@+id/pulse_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pulse_circle"
                                    android:visibility="invisible" />

                            <ImageView
                                    android:id="@+id/pulse_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pulse_circle"
                                    android:visibility="invisible" />

                            <ImageView
                                    android:id="@+id/pulse_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pulse_circle"
                                    android:visibility="invisible" />

                            <View
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_margin="5dp"
                                    android:layout_gravity="center"
                                    android:translationY="-25dp"
                                    android:background="@drawable/white_circle_background" />

                            <ImageView
                                    android:id="@+id/white_circle_view"
                                    android:layout_width="121dp"
                                    android:layout_height="122dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/hold_your_ic_card_to_the_reader"
                                    android:src="@drawable/ic_nfc"
                                    android:translationY="-25dp"
                                    app:tint="#030c2d" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="25dp"
                                    android:text="@string/hold_your_ic_card_to_the_reader"
                                    android:textAlignment="center"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="sans-serif-medium"
                                    android:textSize="14sp"
                                    android:translationY="50dp"/>

                        </FrameLayout>



                    </LinearLayout>

                    <!-- Data State: Shows Suica Info -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/suica_data_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/suica_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/suica"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="@android:color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceDisplayMedium"
                            android:textColor="@android:color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/suica_label"
                            tools:text="Â¥3,240" />

                        <!-- This space adds extra height to the card -->
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            app:layout_constraintTop_toBottomOf="@+id/balance_text"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/penguin_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/penguin"
                            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
                            android:background="?attr/colorPrimaryVariant"
                            android:elevation="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:contentDescription="@string/suica" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- History List -->
            <TextView
                android:id="@+id/history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MainActivity">
                <!-- History items will be added here dynamically -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/dimming_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
