<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent fill to simulate glass -->
    <solid android:color="#40FFFFFF" />

    <!-- Subtle gradient for a light effect -->
    <gradient
        android:angle="315"
        android:startColor="#30FFFFFF"
        android:centerColor="#10FFFFFF"
        android:endColor="#30FFFFFF"
        android:type="linear" />

    <!-- A faint border to define the edge -->
    <stroke
        android:width="1dp"
        android:color="#50FFFFFF" />

    <corners android:radius="16dp" />

</shape>
